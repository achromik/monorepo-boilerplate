{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "lerna run build",
    "packages:archive": "lerna run package:archive",
    "prepare": "husky",
    "test": "lerna run test",
    "version:canary": "lerna version --include-merged-tags --conventional-prerelease --no-changelog",
    "version:graduate": "lerna version --include-merged-tags --conventional-graduate",
    "version:publish": "lerna publish from-package --no-private",
    "watch": "lerna watch -- lerna run build --scope=$LERNA_PACKAGE_NAME --include-dependents"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write --loglevel warn"
    ]
  },
  "dependencies": {},
  "devDependencies": {
    "@dazn-footballco/commitlint-config": "^0.3.1",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.17",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "commitlint": "^18.6.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "lerna": "^8.1.2",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "prettier-plugin-organize-imports": "^3.2.4",
    "ts-jest": "^29.1.2",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  }
}
